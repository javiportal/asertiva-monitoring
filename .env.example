# =============================================================================
# Asertiva Monitoring - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values

# -----------------------------------------------------------------------------
# Database (PostgreSQL)
# -----------------------------------------------------------------------------
DB_USER=asertiva
DB_PASSWORD=asertiva_password
DB_NAME=asertiva_monitoring
DB_HOST=db
DB_PORT=5432
DATABASE_URL=postgresql://asertiva:asertiva_password@db:5432/asertiva_monitoring

# -----------------------------------------------------------------------------
# Wachete API (for ingestor service)
# Get credentials from: https://www.wachete.com/
# -----------------------------------------------------------------------------
WACHETE_USER_ID=your_wachete_user_id
WACHETE_API_KEY=your_wachete_api_key
WACHETE_BASE_URL=https://api.wachete.com/thirdparty/v1

# -----------------------------------------------------------------------------
# OpenAI API (for ai-filter service)
# Get API key from: https://platform.openai.com/api-keys
# -----------------------------------------------------------------------------
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4o-mini
